{
  "name": "book-app-backend",
  "version": "1.0.0",
  "description": "Book App API",
  "author": "Piotr Blachnio",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start:debug": "nest start --debug --watch",
    "start:dev": "cross-env APP_MODE=development nodemon --config nodemon.json",
    "start:prod": "tsc && pm2 start ecosystem.config.yml --env production",
    "start:db": "bash ./scripts/start-db.sh",
    "start:db:admin": "npx prisma studio",
    "prisma:update": "npx prisma introspect && npx prisma generate",
    "prisma:migrate:dev": "npx prisma migrate dev --preview-feature",
    "start:metrics": "bash ./scripts/start-metrics.sh",
    "seed:user": "nestjs-command seed:user",
    "test": "yarn test:unit && yarn test:e2e",
    "test:unit": "cross-env APP_MODE=testing jest --testTimeout=25000 --detectOpenHandles --forceExit __tests__/",
    "test:e2e": "cross-env APP_MODE=testing jest --testTimeout=25000 --detectOpenHandles --forceExit e2e/",
    "lint": "eslint src",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.6",
    "@nestjs/core": "^7.6.6",
    "@nestjs/mongoose": "^7.2.2",
    "@nestjs/platform-express": "^7.6.6",
    "@nestjs/schedule": "^0.4.2",
    "@prisma/client": "^2.15.0",
    "bcrypt": "^5.0.0",
    "cloudinary": "^1.23.0",
    "cookie-parser": "^1.4.5",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "faker": "^5.2.0",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.13",
    "nestjs-command": "^2.0.0",
    "nodemailer": "^6.4.17",
    "pm2": "^4.5.1",
    "prom-client": "^13.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "sharp": "^0.27.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.4",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.6",
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cron": "^1.7.2",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.1.5",
    "@types/jest": "26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.14.22",
    "@types/nodemailer": "^6.4.0",
    "@types/sharp": "^0.27.1",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "4.14.1",
    "@typescript-eslint/parser": "4.14.1",
    "eslint": "7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "husky": "^4.3.8",
    "jest": "26.6.3",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "26.4.4",
    "ts-loader": "^8.0.14",
    "ts-node": "9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  }
}
