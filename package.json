{
  "name": "book_app",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "start:dev": "cross-env APP_MODE=development concurrently \"tsc -w\" \"nodemon dist/index.js\"",
    "start:prod": "cross-env APP_MODE=production node dist/index.js",
    "start:db": "bash ./src/scripts/start-db.sh",
    "start:db:admin": "bash ./src/scripts/start-db-admin.sh",
    "test": "cross-env APP_MODE=testing jest --testTimeout=25000 --detectOpenHandles --forceExit",
    "seed:user": "tsc && node dist/database/seeders/user/index.js",
    "lint": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Book-App-Team/Book-App-Backend.git"
  },
  "author": "Piotr Blachnio",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Book-App-Team/Book-App-Backend/issues"
  },
  "homepage": "https://github.com/Book-App-Team/Book-App-Backend#readme",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/faker": "^5.1.5",
    "@types/jest": "^26.0.19",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/nodemailer": "^6.4.0",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.15.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "awilix": "^4.3.1",
    "bcrypt": "^5.0.0",
    "chalk": "^4.1.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "faker": "^5.1.0",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.8",
    "nodemailer": "^6.4.17",
    "rimraf": "^3.0.2"
  }
}
